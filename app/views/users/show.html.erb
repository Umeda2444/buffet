<div class="user_page">
  <header class="user_page-header">
    <div class="yjContainer">
      <a href="">
        <h2><%=  current_user.username %> <span>さんのマイページ</span></h2>
      </a>
    </div>
  </header>
  <div class="pt1em pb1em" id="contents">  <div id="main_cnt_wrapper">
    <div id="yjContentsBody">
      <div class="yjContainer">
        <ul class="user_page-contents">
          <p>あなたの好み（評価の平均）<p>
        <table>
          <tr><td>雰囲気</td><td><%= @user.reviews_average(:mood) %></td></tr>
          <tr><td>料理</td><td><%= @user.reviews_average(:food) %></td></tr>
          <tr><td>サービス</td><td><%= @user.reviews_average(:service) %></td></tr>
        </table>



          <p>全てのレビュー<p>
          <%  current_user.reviews.each do |review| %>

            <li>
              <a href="/restaurants/<%= review.restaurant.id %>"><%= review.restaurant.name %></a></br>
              <a href="/restaurants/<%= review.restaurant.id %>"><img class="thumbnail" src= <%= review.restaurant.image_url %> alt="title" onerror="this.src='/assets/Noimage.jpg';" /></a>
              <table>
                <tr><td>雰囲気</td><td><%= review.mood.to_f / 10 %></td></tr>
                <tr><td>料理</td><td><%= review.food.to_f / 10 %></td></tr>
                <tr><td>サービス</td><td><%= review.service.to_f / 10 %></td></tr>
              </table>
            </li>

          <% end %>
        </ul>
      </div>
    </div>
  </div>
